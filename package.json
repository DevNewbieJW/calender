    "express": "^4.17.2",
    "github-markdown-css": "^5.0.0",
    "hast-util-sanitize": "^4.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-query": "^3.33.4",
    "react-router": "^5.0.2",
    "react-router-dom": "^5.0.2",
    "react-toastify": "^8.1.0",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-react": "^9.0.1",
    "remark-stringify": "^10.0.2",
    "unified": "^10.1.1",
    "use-local-storage-state": "^12.0.0"
  }
